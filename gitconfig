[user]
	name = Cyrille
	email = cypierre58@gmail.com

[push]
	default = simple

[core]
	autocrlf = input
    pager = delta

[alias]
	sm  = submodule
	co  = checkout
	ss  = status -s
	cm  = commit
	lfu = ls-files -u
	lo  = log --oneline
	graph = log --graph --all --date-order --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) %C(yellow)(%cd)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --branches
	pr  = pull -r
	pra = pull -r --autostash
	sw  = switch

[http]
	sslverify = false

[credential]
	helper = cache

[diff]
  tool = meld

[difftool]
  prompt = false

[difftool "meld"]
  cmd = meld "$LOCAL" "$REMOTE"

[init]
	defaultBranch = master

[pull]
	ff = only

[interactive]
  diffFilter = delta --color-only --features=interactive

[delta]
  features = decorations

[delta "interactive"]
  keep-plus-minus-markers = false

[delta "decorations"]
  commit-decoration-style = blue ol
  commit-style = raw
  file-style = omit
  hunk-header-decoration-style = blue box
  hunk-header-file-style = red
  hunk-header-line-number-style = "#067a00"
  hunk-header-style = file line-number syntax
  minus-style = normal "#4b0000"
  plus-style = syntax "#003a00"

[include]
  path = ~/.config/local_gitconfig
