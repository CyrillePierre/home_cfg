#!/bin/bash
cd "$(dirname "${BASH_SOURCE[0]}")"
source common.sh

install() {
  local dir=$1
  shift
  echo -e "\e[01;34mInstall ${dir}\e[00m"
  "${dir}/install" -b "$BACKUP_DIR" "${ARGS[@]}"
}

install tools
install cargo
install clang
install fzf
install gdb
install git
install nvim
install python
install tmux
install vim
install zsh
install profile
install lazygit
install scripts
install zellij

# GUI
install fonts
install alacritty
install terminator
install kitty
install rofi
